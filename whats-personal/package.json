{
  "name": "functions",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "yarn --ignore-engines build && firebase emulators:start",
    "shell": "yarn --ignore-engines build && firebase functions:shell",
    "start": "yarn --ignore-engines shell",
    "deploy": "yarn --ignore-engines build && firebase deploy --only functions:whatsappMessage",
    "logs": "firebase functions:log",
    "mon": "yarn --ignore-engines ts-node-dev --inspect --respawn ./src/index.ts"
  },
  "engines": {
    "node": "16"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@google-cloud/dialogflow-cx": "^3.2.0",
    "@google-cloud/speech": "^5.3.0",
    "@google-cloud/text-to-speech": "^4.2.0",
    "axios": "^1.3.2",
    "firebase-admin": "^10.2.0",
    "firebase-functions": "^3.21.0",
    "openai": "^3.1.0"
  },
  "devDependencies": {
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.6.4"
  },
  "private": true
}
